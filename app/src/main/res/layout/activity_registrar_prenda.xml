<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:orientation="vertical"
    tools:context=".RegistrarPrendaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/banner" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/closet_virtual" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="15dp"
        android:fontFamily="@font/lexend_deca_semi_bold"
        android:text="@string/titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="15dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/ibAgregarImagen"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/dark_round_button"
            android:src="@drawable/agregar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexend_deca_medium"
            android:gravity="center"
            android:text="@string/imagen"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etNombrePrenda"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/dark_round_edit_text"
            android:fontFamily="@font/lexend_deca_medium"
            android:hint="@string/hint_nombre_prenda"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="8"
            android:textColor="@color/cream"
            android:textColorHint="@color/cream" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexend_deca_medium"
            android:text="@string/categoria"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp">

            <ImageButton
                android:id="@+id/ibTop"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/tag_view_off"
                android:paddingVertical="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icono_tops_negro" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibBottom"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/tag_view_off"
                android:paddingVertical="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icono_bottoms_negro" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibZapatos"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/tag_view_off"
                android:paddingVertical="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icono_zapatos_negro" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibBodysuit"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/tag_view_off"
                android:paddingVertical="2dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icono_bodysuits_negro" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibAccesorio"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/tag_view_off"
                android:paddingVertical="6dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icono_accesorios_negro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_deca_medium"
                    android:text="@string/estampado"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="14dp">

                    <ToggleButton
                        android:id="@+id/tbSi"
                        android:layout_width="53dp"
                        android:layout_height="35dp"
                        android:background="@drawable/tag_view_off"
                        android:fontFamily="@font/lexend_deca_light"
                        android:paddingVertical="5dp"
                        android:textAllCaps="false"
                        android:textOff="@string/estampado_si"
                        android:textOn="@string/estampado_si"
                        android:textSize="14sp"
                        android:layout_marginRight="15dp"/>

                    <ToggleButton
                        android:id="@+id/tbNo"
                        android:layout_width="53dp"
                        android:layout_height="35dp"
                        android:background="@drawable/tag_view_off"
                        android:fontFamily="@font/lexend_deca_light"
                        android:paddingVertical="5dp"
                        android:textAllCaps="false"
                        android:textOff="@string/estampado_no"
                        android:textOn="@string/estampado_no"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_deca_medium"
                    android:text="@string/color"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnColor"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/color_button"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_deca_medium"
                android:text="@string/tags"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="14dp">

                    <ToggleButton
                        android:id="@+id/tbCasual"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/tag_view_off"
                        android:fontFamily="@font/lexend_deca_light"
                        android:paddingVertical="5dp"
                        android:textAllCaps="false"
                        android:textOff="@string/casual"
                        android:textOn="@string/casual"
                        android:layout_marginRight="15dp"/>

                    <ToggleButton
                        android:id="@+id/tbFormal"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/tag_view_off"
                        android:fontFamily="@font/lexend_deca_light"
                        android:paddingVertical="5dp"
                        android:textAllCaps="false"
                        android:textOff="@string/formal"
                        android:textOn="@string/formal"
                        android:layout_marginRight="15dp"/>

                    <ToggleButton
                        android:id="@+id/tbDeportivo"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/tag_view_off"
                        android:fontFamily="@font/lexend_deca_light"
                        android:paddingVertical="5dp"
                        android:textAllCaps="false"
                        android:textOff="@string/deportivo"
                        android:textOn="@string/deportivo"
                        android:layout_marginRight="15dp"/>

                    <ToggleButton
                        android:id="@+id/tbBasico"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/tag_view_off"
                        android:fontFamily="@font/lexend_deca_light"
                        android:paddingVertical="5dp"
                        android:textAllCaps="false"
                        android:textOff="@string/b_sico"
                        android:textOn="@string/b_sico"
                        android:layout_marginRight="15dp"/>

                    <ToggleButton
                        android:id="@+id/tbFiesta"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/tag_view_off"
                        android:fontFamily="@font/lexend_deca_light"
                        android:paddingVertical="5dp"
                        android:textAllCaps="false"
                        android:textOff="@string/fiesta"
                        android:textOn="@string/fiesta"
                        android:layout_marginRight="15dp"/>

                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/btnRegistrarPrenda"
                android:layout_width="280dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/lexend_deca_medium"
                android:text="@string/confirmar"
                android:textAllCaps="false"
                android:textColor="@color/cream"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>